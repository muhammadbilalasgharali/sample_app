<h1><%= @user.name %> Profile</h1>
<p> Name: <%= @user.name %> </p>
<p> Email: <%= @user.email %> </p>

<% provide(:title, @user.name) %>
<div class="row">

  <aside class="col-md-4">
    <section class="user_info">
      <h2>
        <%= gravatar_for @user %>
        </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
    <h3></a>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>
